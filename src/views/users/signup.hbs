<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <form action="/api/auth/signup" method="post">
            <legend>Sign Up</legend>
            <div class="form-group">
                <label for="post-email">e-mail</label>
                <input type="email" name="email" class="form-control" id="post-email" placeholder="example@email.com">
            </div>
            <div class="form-group">
                <label for="post-password">password</label>
                <input type="password" name="password" class="form-control" id="post-password" placeholder="*******">
            </div>
            <div class='text-right'>
                <button type="submit" class="btn btn-primary">Sign Up</button>
            </div>
        </form>
    </div>
</div>