<div class="row">
    <div class="col-sm-4 col-sm-offset-4">
        <form action="/api/auth/login" method="post">
            <legend>Log In</legend>
            <div class="form-group">
                <label for="post-email">e-mail</label>
                <input type="email" name="email" class="form-control" id="post-email" placeholder="example@email.com">
            </div>
            <div class="form-group">
                <label for="post-password">password</label>
                <input type="password" name="password" class="form-control{{isWarning warning}}" id="post-password" placeholder="*******">
            </div>
            <div class='text-right'>
                <button type="submit" class="btn btn-primary">Log In</button>
            </div>
            {{#if warning}}
                <p style="color: red">Incorrect username/password.</p>
            {{/if}}
        </form>
    </div>
</div>